<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LayoutVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LayoutWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonMainMenu" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/light_black</item>
        <item name="iconPadding">@dimen/dp_10</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextViewGlobal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextViewGlobal.Main" parent="TextViewGlobal">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_14</item>
        <item name="android:layout_marginBottom">@dimen/dp_40</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="TextViewGlobal.Setting" parent="TextViewGlobal.Main">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/dp_12</item>
        <item name="android:layout_marginTop">@dimen/dp_14</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
    </style>

    <style name="MaterialToolBar" parent="LayoutWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="navigationIcon">@drawable/back</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="contentInsetStart">@dimen/dp_0</item>
        <item name="contentInsetStartWithNavigation">@dimen/dp_0</item>
    </style>

    <style name="MaterialToolBar.Settings.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="MaterialToolBar.Search.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>


    <style name="TextViewDefault" parent="TextViewGlobal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewDefault.Switch" parent="TextViewDefault">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
    </style>

    <style name="TextViewDefault.Text" parent="TextViewDefault">
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_21</item>
        <item name="android:paddingTop">@dimen/dp_21</item>
    </style>

    <style name="EditText.Search" parent="TextViewGlobal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawableStart">@drawable/search_base</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_12</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:background">@drawable/edittext_border_radius</item>
        <item name="android:paddingEnd">@dimen/dp_40</item>
    </style>

    <style name="ImageView.Search" parent="LayoutWrap">
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ImageView.Song" parent="LayoutWrap">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_13</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ImageView.Info" parent="LayoutWrap">
        <item name="android:layout_marginRight">@dimen/dp_12</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextView.Song.Name" parent="TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:layout_marginTop">@dimen/dp_14</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Song.Secondary" parent="TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>