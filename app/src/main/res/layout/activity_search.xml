<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="?attr/colorPrimary"
    style="@style/LayoutVertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_search"
        app:title="@string/search"
        app:titleTextAppearance="@style/MaterialToolBar.Search.Title"
        style="@style/MaterialToolBar"/>

    <FrameLayout
        style="@style/LayoutHorizontal" >
        <EditText
            android:id="@+id/search"
            android:imeOptions="actionDone"
            style="@style/EditText.Search" />

        <ImageView
            android:id="@+id/clearIcon"
            android:src="@drawable/clear"
            style="@style/ImageView.Search"
            app:tint="?attr/colorOnSecondary" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listSongs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="@dimen/dp_16"/>

</LinearLayout>